{
  "hooks": {
    "PreToolUse": [
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/context-monitor.js"],
        "description": "コンテキスト使用率を監視し、60%を超えたら警告を表示"
      },
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/detect-package-manager.js"],
        "description": "プロジェクトのパッケージマネージャーを自動検出（npm/pnpm/yarn/bun）"
      }
    ],
    "PostToolUse": [
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/auto-format.js"],
        "description": "コード編集後に自動フォーマット（Prettier/ESLint）を実行"
      },
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/detect-console-log.js"],
        "description": "console.log や debugger の使用を検出して警告"
      },
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/typescript-check.js"],
        "description": "TypeScript型チェックを自動実行"
      }
    ],
    "PreCommit": [
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/secret-scan.js"],
        "description": "コミット前にシークレット混入をチェック"
      },
      {
        "command": "node",
        "args": ["{{PLUGIN_ROOT}}/hooks/coverage-check.js"],
        "description": "テストカバレッジを検証（80%以上推奨）"
      }
    ]
  }
}
