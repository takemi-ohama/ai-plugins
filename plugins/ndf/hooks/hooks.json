{
  "description": "NDF Plugin hooks: Auto-setup and notifications",
  "hooks": {
    "SessionStart": [
      {
        "description": "Inject NDF Plugin Guide to project CLAUDE.md",
        "matcher": "startup|resume",
        "priority": 50,
        "enabled": true,
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/inject-plugin-guide.js",
            "description": "Auto-inject NDF plugin guidelines to project CLAUDE.md",
            "continueOnError": true,
            "suppressOutput": false
          }
        ]
      },
      {
        "description": "Ensure Playwright browser is installed",
        "matcher": "startup|resume",
        "priority": 100,
        "enabled": true,
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/ensure-playwright.js",
            "description": "Auto-install Playwright chromium on first use",
            "continueOnError": false,
            "suppressOutput": false
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/slack-notify.js session_end",
            "description": "Send Slack notification when Claude Code exits"
          }
        ]
      }
    ]
  }
}
